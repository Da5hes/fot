export ASAN_OPTIONS=detect_odr_violation=0:abort_on_error=1:symbolize=0:detect_leaks=0:allocator_may_return_null=1
hash llvm-symbolizer-x &> /dev/null
if [[ $? -ne 0 ]]; then
    echo "llvm-symoblizer NOT FOUND"
# we cannot "exit" here since this file is sourced
fi
export ASAN_SYMBOLIZER_PATH=$(realpath $(which llvm-symbolizer))
